<Patch>

    <!-- Revolver -->
    <Operation Class="PatchOperationSequence">
        <success>Always</success>
        <operations>
            <li Class="PatchOperationTest">
                <xpath>*/ThingDef[defName="Gun_Revolver"]/comps</xpath>
                <success>Invert</success>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>*/ThingDef[defName="Gun_Revolver"]</xpath>
                <value>
                    <comps/>
                </value>
            </li>
        </operations>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>*/ThingDef[defName="Gun_Revolver"]/comps</xpath>
        <value>
            <li Class="SimpleAmmo.CompProperties_Ammo">
                <ammoDef>Ammo_BulletPistolMedium</ammoDef>
                <magazineCapacity>6</magazineCapacity>
                <reloadOneAtATime>true</reloadOneAtATime>
                <reloadTime>0.7</reloadTime>
