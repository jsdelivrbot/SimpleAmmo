<Patch>

    <!-- Short Bow -->
    <Operation Class="PatchOperationSequence">
        <success>Always</success>
        <operations>
            <li Class="PatchOperationTest">
                <xpath>*/ThingDef[defName="Bow_Short"]/comps</xpath>
                <success>Invert</success>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>*/ThingDef[defName="Bow_Short"]</xpath>
                <value>
                    <comps/>
                </value>
            </li>
        </operations>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>*/ThingDef[defName="Bow_Short"]/comps</xpath>
        <value>
            <li Class="SimpleAmmo.CompProperties_Ammo">
                <ammoDef>Ammo_Arrow</ammoDef>
                <magazineCapacity>1</magazineCapacity>
                <reloadTime>0.8</reloadTime>
                <throwReloadingMote>false</throwReloadingMote>
            </li>
        </value>
    </Operation>

    <!-- Recurve Bow -->
